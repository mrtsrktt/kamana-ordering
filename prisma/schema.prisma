generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @default(cuid())
  name        String
  slug        String      @unique
  description String
  ingredients String?
  price       Float
  imageUrl    String
  isActive    Boolean     @default(true)
  isFeatured  Boolean     @default(false)
  tags        String?
  categoryId  String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItem   OrderItem[]
  Category    Category    @relation(fields: [categoryId], references: [id])

  @@index([categoryId])
  @@index([isActive, isFeatured])
  @@index([slug])
}

model Settings {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@index([key])
}

model Order {
  id                 String       @id @default(cuid())
  code               String       @unique
  status             OrderStatus  @default(NEW)
  customerName       String
  customerPhone      String
  customerEmail      String?
  address            String
  addressDescription String?
  deliveryType       DeliveryType
  deliveryTimeText   String?
  paymentType        PaymentType
  totalAmount        Float
  sourceCampaign     String?
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  OrderItem          OrderItem[]

  @@index([status])
  @@index([createdAt])
  @@index([code])
}

model Category {
  id           String    @id
  name         String
  slug         String    @unique
  displayOrder Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime
  Product      Product[]

  @@index([displayOrder])
  @@index([slug])
}

model OrderItem {
  id                  String   @id
  orderId             String
  productId           String
  productNameSnapshot String
  unitPriceSnapshot   Float
  quantity            Int
  note                String?
  createdAt           DateTime @default(now())
  Order               Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  Product             Product  @relation(fields: [productId], references: [id])

  @@index([orderId])
}

enum DeliveryType {
  ASAP
  SCHEDULED
}

enum OrderStatus {
  NEW
  PREPARING
  ON_THE_WAY
  DELIVERED
  CANCELLED
}

enum PaymentType {
  CASH
  CARD
}
